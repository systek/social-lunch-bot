{
  "name": "social-slack-bot",
  "version": "1.0.0",
  "description": "A Slack bot for bringing people together for lunch!",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "build": "yarn tsc",
    "start": "nodemon --watch '*.ts' --exec 'ts-node' ./src/index.ts",
    "lint:checkstyle": "eslint src/** --ext .js -f checkstyle > eslint.xml",
    "lint:fix": "eslint './src/**/*.{ts,tsx}'",
    "prettier:fix": "prettier --check \"**/*.*\" --fix",
    "lint": "yarn lint:fix"
  },
  "dependencies": {
    "@slack/web-api": "^6.0.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mongoose": "5.11.18",
    "passport": "^0.4.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "4.17.9",
    "@types/mongoose": "5.10.3",
    "@types/node": "14.14.10",
    "@types/passport": "^1.0.6",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "4.9.0",
    "@typescript-eslint/parser": "4.9.0",
    "eslint": "7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "2.0.6",
    "prettier": "^2.2.1",
    "ts-node": "9.0.0",
    "typescript": "^4.1.5"
  }
}
