{
  "name": "social-slack-bot",
  "version": "1.0.0",
  "description": "A Slack bot for bringing people together for lunch!",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "build": "yarn tsc",
    "start": "nodemon --watch '*.ts' --exec 'ts-node' ./src/index.ts",
    "lint:checkstyle": "eslint src/** --ext .js -f checkstyle > eslint.xml",
    "lint:fix": "eslint './src/**/*.{ts,tsx}'",
    "prettier:fix": "prettier --check \"**/*.*\" --fix",
    "test": "mocha --config ./mocharc.json -r ts-node/register",
    "test:watch": "mocha --config ./mocharc.json --watch -r ts-node/register",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
    "lint": "yarn lint:fix"
  },
  "dependencies": {
    "@formatjs/intl-datetimeformat": "^3.3.1",
    "@slack/web-api": "^6.0.0",
    "@types/node-schedule": "^1.3.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-bearer-token": "^2.4.0",
    "mongoose": "5.11.18",
    "node-schedule": "^2.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@slack/types": "^2.0.0",
    "@types/chai": "^4.2.15",
    "@types/express": "4.17.9",
    "@types/mocha": "^8.2.1",
    "@types/mongoose": "5.10.3",
    "@types/node": "14.14.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "4.9.0",
    "@typescript-eslint/parser": "4.9.0",
    "chai": "^4.3.4",
    "eslint": "7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.3.2",
    "ngrok": "^3.4.0",
    "nodemon": "2.0.6",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-node": "9.0.0",
    "typescript": "^4.1.5"
  }
}
